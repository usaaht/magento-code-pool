<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="grid_table" resource="default" engine="innodb" comment="Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" comment="ID" identity="true"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="smallint" name="age" padding="5" nullable="false" comment="Age"/>
        <column xsi:type="varchar" name="phone" nullable="false" length="20" comment="Phone"/>
        <column xsi:type="varchar" name="city" nullable="false" length="255" comment="City"/>
        <column xsi:type="varchar" name="district" nullable="false" length="255" comment="District"/>
        <column xsi:type="varchar" name="job" nullable="false" length="255" comment="Job"/>
        <column xsi:type="varchar" name="country" nullable="false" length="255" comment="Country"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>

